{
  "version": 2,
  "builds": [
    {
      "src": "sportz-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/sportz-frontend/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/sportz-frontend/index.html"
    }
  ]
}
